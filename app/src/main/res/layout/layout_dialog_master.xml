<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialogTermAndConditions"
    android:orientation="vertical"
    android:background="@drawable/background_white_round"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:filterTouchesWhenObscured="true">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivClose"
        android:src="@drawable/ic_cancel_gray"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"/>
    <TextView
        android:id="@+id/textViewTitle"
        tools:text="Titulo"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textViewMessage"
        tools:text="Mensaje"
        android:textColor="@color/low_black"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/llButtonContainers"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnAccept"
            tools:text="Aceptar"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_margin="10dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            style="@style/ButtonStyleRed"/>
    </LinearLayout>
</LinearLayout>
